<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E233"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/ei"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Event Information"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black">
    </TextView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@color/white">
        <TableRow>
            <TextView
                android:id="@+id/TextVname"
                android:text="Name"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <EditText
                android:id="@+id/EditTname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold">
            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVplace"
                android:text="Place"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <EditText
                android:id="@+id/EditTplace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:inputType="text"
                android:textColor="@color/black">
            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVtype"
                android:text="Type"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/indoor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Indoor">
                </RadioButton>
                <RadioButton
                    android:id="@+id/outdoor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Outdoor">
                </RadioButton>
                <RadioButton
                    android:id="@+id/online"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Online">
                </RadioButton>
            </RadioGroup>

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVdateAndTime"
                android:text="Date &amp; Time"
                android:textSize="20dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <EditText
                android:id="@+id/EditTdateAndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:inputType="text"
                android:textColor="@color/black">
            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVcapacity"
                android:text="Capacity"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <EditText
                android:id="@+id/EditTcapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="@color/black">
            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVbudget"
                android:text="Budget"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <EditText
                android:id="@+id/EditTbudget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="@color/black">
            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVemail"
                android:text="Email"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <EditText
                android:id="@+id/EditTemail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:textColor="@color/black">
            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVphone"
                android:text="Phone"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <EditText
                android:id="@+id/EditTphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:inputType="phone"
                android:textColor="@color/black">
            </EditText>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/TextVdes"
                android:text="Description"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <EditText
                android:id="@+id/EditTdes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:inputType="textShortMessage"
                android:textColor="@color/black">
            </EditText>
        </TableRow>

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Error messages will be here"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F51B03">
        </TextView>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="cancel"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="#D8E233"
            android:layout_margin="10dp">
        </Button>
        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Share"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="#D8E233"
            android:layout_margin="10dp">
        </Button>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="#D8E233"
            android:layout_margin="10dp">
        </Button>
    </LinearLayout>
</LinearLayout>